<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/layout_top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/teal_200">

        <TextView
            android:id="@+id/tv_user_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Tên: Admin | Vai trò: Quản lý"
            android:textSize="16sp"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"/>
    </LinearLayout>

<!--    <Button-->
<!--        android:id="@+id/btn_login"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Đăng nhập"-->
<!--        app:layout_constraintTop_toBottomOf="@id/layout_top_bar"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        android:layout_marginTop="20dp" />-->
    <!-- Admin -->
    <Button
        android:id="@+id/btn_manage_food"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quản lý món ăn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/btn_manage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Quản lý "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_manage_food"
        android:layout_marginTop="20dp"/>


    <Button
        android:id="@+id/btn_view_menu_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đặt bàn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_manage"
        android:layout_marginTop="20dp"/>

    <!-- Nhân viên -->
    <Button
        android:id="@+id/btnViewOrders"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Xử lý đơn hàng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/btn_update_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cập nhật trạng thái"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnViewOrders"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_confirm_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Xác nhận thanh toán"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_update_status"
        android:layout_marginTop="20dp"/>

    <!-- Khách hàng -->
    <Button
        android:id="@+id/btn_view_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Xem thực đơn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/btn_order_at_table"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đặt món tại bàn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_view_menu"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btn_view_order_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Xem trạng thái đơn hàng"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_order_at_table"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
